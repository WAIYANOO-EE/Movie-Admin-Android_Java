<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/root_padding">

    <TextView
        android:id="@+id/tv_form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Add Series"
        android:textSize="@dimen/form_title"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/et_series_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Series title..."/>

    <EditText
        android:id="@+id/et_series_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:hint="Description..."/>

    <EditText
        android:id="@+id/et_series_episodes_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Episodes Count..."/>

    <EditText
        android:id="@+id/et_series_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image Url..."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Genre"/>

    <Spinner
        android:id="@+id/sp_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@color/colorAccent"
        android:textColor="#fff"/>

</LinearLayout>